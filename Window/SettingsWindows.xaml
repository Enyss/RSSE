<Window x:Class="RSSE.SettingsWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSSE"
        mc:Ignorable="d"
        Title="Settings" Height="114.286" Width="420">
    <Grid Margin="0,0,0,10">
        <DockPanel Height="26" Margin="10,10,-10,38">
            <Label>Rogue System Folder :</Label>
            <TextBox Width="232" HorizontalAlignment="Left" VerticalAlignment="Center" 
                     Name="RogueSystemFolder"
                     Text="{Binding Path=RogueSysemFileRoot, UpdateSourceTrigger=Explicit}"/>
            <Button Width="20" Height="20" HorizontalAlignment="Left" Click="SelectRogueSystemFolder_Click" >...</Button>
        </DockPanel>
        <Button Height="26" Width="120" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Bottom"
                Click="SaveAndExit_Click">Save and exit</Button>
        <Button Width="60" Height="26" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,0
                "
                Click="Exit_Click">Cancel</Button>
    </Grid>
</Window>
